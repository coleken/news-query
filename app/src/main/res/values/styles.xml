<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- = = = = = = = = = = = = = = = = = = = View Styles = = = = = = = = = = = = = = = = = = = -->

  <!-- = = = = = = = = = = Parent Styles = = = = = = = = = = -->
  <!-- Text Style -->
  <style name="style_parent_text_view" parent="Theme.NewsQ">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/colorPrimaryText</item>
  </style>

  <!-- = = = = = = = = = = activity_main = = = = = = = = = = -->
  <!-- Constraint Layout -->
  <style name="style_main_constraint_layout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginTop">@dimen/main_layout_margin_top</item>
  </style>
  <!-- Nav Host Fragment-->
  <style name="style_layout_host_fragment">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:name">androidx.navigation.fragment.NavHostFragment</item>
  </style>
  <!-- Nav View -->
  <style name="style_layout_nav_view">
    <item name="android:layout_width">@dimen/zero_height_width</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">@dimen/zero_height_width</item>
    <item name="android:layout_marginStart">@dimen/zero_height_width</item>
    <item name="android:background">?android:attr/windowBackground</item>
  </style>

  <!-- = = = = = = = = = = story_item = = = = = = = = = = -->
  <!-- Story Item Card View -->
  <style name="style_story_cardview" parent="Theme.NewsQ">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">@dimen/cardview_margin</item>
    <item name="android:elevation">@dimen/cardview_elevation</item>
    <item name="android:gravity">center</item>
    <item name="android:background">?selectableItemBackground</item>
    <item name="android:clickable">true</item>
  </style>
  <!-- Story Web Title -->
  <style name="style_story_title" parent="style_parent_text_view">
    <item name="android:textSize">@dimen/story_title_text_size</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_margin">@dimen/list_item_margin</item>
    <item name="android:text">@string/story_web_title</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">?selectableItemBackground</item>
  </style>
  <!-- Story Trail Text -->
  <style name="style_story_trail_text" parent="style_parent_text_view">
    <item name="android:layout_width">match_parent</item>
    <item name="android:textSize">@dimen/story_content_text_size</item>
    <item name="android:layout_margin">@dimen/list_item_margin</item>
    <item name="android:text">@string/string_story_trail_text</item>
    <item name="android:background">?selectableItemBackground</item>
  </style>
  <!-- Story Resource -->
  <style name="style_story_resource" parent="style_parent_text_view">
    <item name="android:textSize">@dimen/story_content_text_size</item>
    <item name="android:text">@string/story_resource</item>
    <item name="android:layout_marginTop">@dimen/title_content_separation_margin</item>
    <item name="android:layout_marginBottom">@dimen/list_item_margin</item>
    <item name="android:layout_marginEnd">@dimen/list_item_margin</item>
    <item name="android:layout_marginStart">@dimen/list_item_margin</item>
    <item name="android:background">?selectableItemBackground</item>
    <item name="android:textColor">@color/colorSecondaryText</item>
  </style>
  <!-- Story Byline -->
  <style name="style_story_byline" parent="style_parent_text_view">
    <item name="android:layout_width">match_parent</item>
    <item name="android:textSize">@dimen/story_content_text_size</item>
    <item name="android:layout_margin">@dimen/list_item_margin</item>
    <item name="android:text">@string/string_story_byline</item>
    <item name="android:background">?selectableItemBackground</item>
    <item name="android:textColor">@color/colorSecondaryText</item>
  </style>
  <!-- Story Section Name -->
  <style name="style_story_section_name" parent="style_parent_text_view">
    <item name="android:textSize">@dimen/story_content_text_size</item>
    <item name="android:text">@string/story_section_name</item>
    <item name="android:layout_margin">@dimen/list_item_margin</item>
    <item name="android:background">?selectableItemBackground</item>
    <item name="android:textColor">@color/colorSecondaryText</item>
  </style>
  <!-- Story Publication Date -->
  <style name="style_story_publication_date" parent="style_parent_text_view">
    <item name="android:textSize">@dimen/story_content_text_size</item>
    <item name="android:text">@string/story_publication_date</item>
    <item name="android:layout_marginTop">@dimen/title_content_separation_margin</item>
    <item name="android:layout_marginBottom">@dimen/list_item_margin</item>
    <item name="android:layout_marginEnd">@dimen/list_item_margin</item>
    <item name="android:layout_marginStart">@dimen/list_item_margin</item>
    <item name="android:background">?selectableItemBackground</item>
    <item name="android:textColor">@color/colorSecondaryText</item>
  </style>
  <!-- Story Resource & Section Divider -->
  <style name="style_story_divider" parent="Theme.NewsQ">
    <item name="android:layout_width">@dimen/story_divider_width</item>
    <item name="android:layout_height">@dimen/story_divider_height</item>
    <item name="android:layout_margin">@dimen/list_item_margin</item>
    <item name="android:background">@color/colorDivider</item>
  </style>
  <!-- List View -->
  <style name="style_listview_recyclerview" parent="Theme.NewsQ">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <!-- = = = = = = = = = = fragment_world/browse/search = = = = = = = = = = -->
  <!-- Progress Bar -->
  <style name="style_fragment_progress_bar">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  <!-- Multipurpose/Default TextView -->
  <style name="style_fragment_multipurpose_textview" parent="style_parent_text_view">
    <item name="android:layout_width">match_parent</item>
    <item name="android:textSize">@dimen/multipurpose_text_size</item>
    <item name="android:layout_margin">@dimen/multipurpose_layout_margin</item>
    <item name="android:textAlignment">center</item>
  </style>

  <!-- = = = = = = = = = = fragment_browse/search = = = = = = = = = = -->
  <!-- Browse/Search Layout -->
  <style name="style_browse_search_layout" parent="Theme.NewsQ">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/browse_search_layout_height</item>
    <item name="android:paddingEnd">@dimen/browse_search_layout_padding</item>
    <item name="android:paddingStart">@dimen/browse_search_layout_padding</item>
    <item name="android:layout_marginBottom">@dimen/browse_search_layout_margin_bottom</item>
    <item name="android:background">?android:attr/windowBackground</item>
    <item name="android:elevation">@dimen/browse_search_layout_elevation</item>
  </style>
  <!-- Browse Spinner -->
  <style name="style_browse_spinner" parent="Theme.NewsQ">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textSize">@dimen/search_spinner_text_size</item>
  </style>
  <!-- Search Bar -->
  <style name="style_search_bar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">30dp</item>
    <item name="android:inputType">text</item>
    <item name="android:textColor">@color/colorPrimaryText</item>
    <item name="android:queryHint">@string/search_query_hint</item>
    <item name="android:textSize">@dimen/search_spinner_text_size</item>
  </style>
</resources>